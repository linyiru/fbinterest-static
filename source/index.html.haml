- content_for :head do
  %title Pinterest clone home

- content_for :header do
  .logo
    .wrapper
      %h1= image_tag( "https://placehold.co/200x50?text=FBinterest", :alt => "" )
      .search
        = image_tag( "https://placehold.co/200x50?text=Search%20Box", :alt => "" )
      .right
        %ul
          %li About
          %li.fb-login-button{:scope => "user_photos"}
          %li#fb-user{:style => "display:none;"}
            %img#image{:height => "25px", :width => "25px"}/
            %span#name
  %nav
    .top-menu
      %ul
        %li 
          %select#albums-list{"data-placeholder" => "Select one of your albums", :disabled => "", :style => "width:350px;"}
            %option
        / %li Everything
        / %li Videos
        / %li Discussions
        / %li Gifts

#container
  - 100.times do
    .item
      - @imgheight = ( rand(10) * 20 + 100 ).to_s
      = image_tag( "https://placehold.co/192x" + @imgheight , alt: "", height: @imgheight )
      %h2= lorem.sentence
      .comments
        = 1 + rand(10)
        comments
      .chat
        .chatbox
          = image_tag( "https://placehold.co/30x30", alt: "" )
          %b= lorem.name
          via
          %b= lorem.name
          onto
          %b= lorem.words rand(3) + 1
        - @chat = rand(3)
        - @chat.times do
          .chatbox
            = image_tag( "https://placehold.co/30x30", alt: "" )
            %b= lorem.name
            %p= lorem.sentence
